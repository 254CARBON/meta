<!--
  Template: dashboards/realtime_health.html.j2
  Purpose: Display near‑real‑time health indicators and alerts for services,
           suitable for NOC/operations dashboards.

  Inputs (context):
  - data: object with keys
      metadata: { title, generated_at }
      services: [ { name, status, error_rate, latency_ms, availability, cpu, memory } ]
      alerts: [ { severity, message, service?, timestamp } ]

  Rendered by: scripts/generate_dashboard.py
-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ data.metadata.title }}</title>
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .health-indicator {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 8px;
        }
        .health-healthy { background-color: #28a745; }
        .health-warning { background-color: #ffc107; }
        .health-critical { background-color: #dc3545; }
        
        .service-card {
            transition: transform 0.2s;
        }
        .service-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        .alert-item {
            border-left: 4px solid;
            padding-left: 15px;
        }
        .alert-high { border-left-color: #dc3545; }
        .alert-medium { border-left-color: #ffc107; }
        .alert-low { border-left-color: #17a2b8; }
        
        .incident-item {
            border-left: 4px solid;
            padding-left: 15px;
        }
        .incident-resolved { border-left-color: #28a745; }
        .incident-investigating { border-left-color: #ffc107; }
        .incident-open { border-left-color: #dc3545; }
        
        .refresh-indicator {
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .metric-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }
        
        .metric-value {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .metric-label {
            font-size: 0.9rem;
            opacity: 0.9;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">
                <i class="fas fa-heartbeat"></i> 254Carbon Platform Health
            </span>
            <div class="d-flex">
                <button class="btn btn-outline-light me-2" id="refresh-dashboard">
                    <i class="fas fa-sync-alt" id="refresh-icon"></i> Refresh
                </button>
                <button class="btn btn-outline-light" id="export-dashboard">
                    <i class="fas fa-download"></i> Export
                </button>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <!-- Overall Health Status -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="metric-card">
                    <div class="metric-value">{{ data.overall_health.health_percentage }}%</div>
                    <div class="metric-label">Overall Health</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <div class="metric-value">{{ data.overall_health.healthy_services }}</div>
                        <div class="metric-label">Healthy Services</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <div class="metric-value">{{ data.overall_health.warning_services }}</div>
                        <div class="metric-label">Warning Services</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body text-center">
                        <div class="metric-value">{{ data.overall_health.critical_services }}</div>
                        <div class="metric-label">Critical Services</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-chart-pie"></i> Service Health Distribution</h5>
                    </div>
                    <div class="card-body">
                        <div id="health-overview"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-chart-line"></i> Alert Timeline</h5>
                    </div>
                    <div class="card-body">
                        <div id="alert-timeline"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Service Status Grid -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5><i class="fas fa-server"></i> Service Status Grid</h5>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="filterServices('all')">All</button>
                            <button type="button" class="btn btn-sm btn-outline-success" onclick="filterServices('healthy')">Healthy</button>
                            <button type="button" class="btn btn-sm btn-outline-warning" onclick="filterServices('warning')">Warning</button>
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="filterServices('critical')">Critical</button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row" id="service-grid">
                            {% for service_name, service_data in data.service_health.items() %}
                            <div class="col-md-4 mb-3 service-card" data-status="{{ service_data.status }}">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="health-indicator health-{{ service_data.status }}"></span>
                                            <h6 class="card-title mb-0">{{ service_name }}</h6>
                                        </div>
                                        <div class="row text-center">
                                            <div class="col-6">
                                                <small class="text-muted">Quality Score</small>
                                                <div class="fw-bold">{{ service_data.quality_score }}</div>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Drift Issues</small>
                                                <div class="fw-bold">{{ service_data.drift_issues }}</div>
                                            </div>
                                        </div>
                                        <div class="mt-2">
                                            <small class="text-muted">Domain: {{ service_data.domain }}</small><br>
                                            <small class="text-muted">Maturity: {{ service_data.maturity }}</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alerts and Incidents -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-exclamation-triangle"></i> Active Alerts ({{ data.alerts|length }})</h5>
                    </div>
                    <div class="card-body">
                        {% if data.alerts %}
                            {% for alert in data.alerts %}
                            <div class="alert-item alert-{{ alert.severity }} mb-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>{{ alert.service }}</strong>
                                        <div class="text-muted">{{ alert.message }}</div>
                                        <small class="text-muted">{{ alert.timestamp }}</small>
                                    </div>
                                    <span class="badge bg-{{ 'danger' if alert.severity == 'high' else 'warning' if alert.severity == 'medium' else 'info' }}">
                                        {{ alert.severity }}
                                    </span>
                                </div>
                            </div>
                            {% endfor %}
                        {% else %}
                            <div class="text-center text-muted">
                                <i class="fas fa-check-circle fa-2x mb-2"></i>
                                <div>No active alerts</div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-exclamation-circle"></i> Recent Incidents ({{ data.incidents|length }})</h5>
                    </div>
                    <div class="card-body">
                        {% if data.incidents %}
                            {% for incident in data.incidents %}
                            <div class="incident-item incident-{{ incident.status }} mb-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>{{ incident.title }}</strong>
                                        <div class="text-muted">{{ incident.description }}</div>
                                        <small class="text-muted">
                                            {{ incident.start_time }}
                                            {% if incident.end_time %} - {{ incident.end_time }}{% endif %}
                                        </small>
                                    </div>
                                    <span class="badge bg-{{ 'success' if incident.status == 'resolved' else 'warning' if incident.status == 'investigating' else 'danger' }}">
                                        {{ incident.status }}
                                    </span>
                                </div>
                            </div>
                            {% endfor %}
                        {% else %}
                            <div class="text-center text-muted">
                                <i class="fas fa-check-circle fa-2x mb-2"></i>
                                <div>No recent incidents</div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="text-center text-muted">
                    <small>
                        Last updated: {{ data.metadata.generated_at }} | 
                        Generated by 254Carbon Meta Repository
                    </small>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Render charts
        {% if data.charts.health_overview %}
        document.getElementById('health-overview').innerHTML = {{ data.charts.health_overview|safe }};
        {% endif %}
        
        {% if data.charts.alert_timeline %}
        document.getElementById('alert-timeline').innerHTML = {{ data.charts.alert_timeline|safe }};
        {% endif %}

        // Service filtering
        function filterServices(status) {
            const serviceCards = document.querySelectorAll('.service-card');
            const buttons = document.querySelectorAll('.btn-group .btn');
            
            // Update button states
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            
            // Filter services
            serviceCards.forEach(card => {
                if (status === 'all' || card.dataset.status === status) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        // Refresh functionality
        document.getElementById('refresh-dashboard').addEventListener('click', function() {
            const icon = document.getElementById('refresh-icon');
            icon.classList.add('refresh-indicator');
            
            setTimeout(() => {
                location.reload();
            }, 1000);
        });

        // Export functionality
        document.getElementById('export-dashboard').addEventListener('click', function() {
            window.print();
        });

        // Auto-refresh every 5 minutes
        setInterval(() => {
            location.reload();
        }, 300000);

        // Initialize with all services visible
        document.querySelector('.btn-group .btn:first-child').classList.add('active');
    </script>
</body>
</html>
